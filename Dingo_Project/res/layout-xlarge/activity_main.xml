<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp"
    tools:context="com.example.dingo_project.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="700dp"
        android:layout_height="866dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tx_busca"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="178dp"
        android:layout_x="52dp"
        android:layout_y="254dp" />

    <EditText
        android:id="@+id/tx_busca"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_buscar"
        android:layout_toLeftOf="@+id/button_buscar"
        android:ems="10"
        android:hint="Nome da brincadeira"
        android:textSize="36sp" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/button_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gallery1"
        android:layout_marginTop="36dp"
        android:src="@drawable/abc_ic_search" />

</RelativeLayout>
