<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp"
    tools:context="com.example.dingo_project.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ImageButton
        android:id="@+id/button_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1195dp"
        android:layout_y="18dp"
        android:src="@drawable/abc_ic_search" />

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="1155dp"
        android:layout_height="583dp"
        android:layout_x="67dp"
        android:layout_y="69dp"
        
        />

    <EditText
        android:id="@+id/tx_busca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="840dp"
        android:layout_y="16dp"
        android:ems="10"
        android:hint="Nome da brincadeira"
        android:singleLine="true"
        android:textSize="30sp" >

        <requestFocus />
    </EditText>

</AbsoluteLayout>
